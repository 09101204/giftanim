<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <!--170dp-->


    <RelativeLayout
        android:id="@+id/relayout_live_anchor"
        android:layout_width="@dimen/dp_live_bar_width"
        android:layout_height="@dimen/gift_bar_height"
        android:background="@drawable/shape_gift_bar"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cn.qssq666.giftmodule.ui.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/gift_bar_height"
            android:layout_height="@dimen/gift_bar_height"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:visibility="visible"

            />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2.0dip"
            android:layout_toRightOf="@+id/iv_head"
            android:ellipsize="end"
            android:maxLength="9"
            android:maxWidth="70.0dip"
            android:minWidth="4.0dip"
            android:singleLine="true"
            android:text="情随事ffffff迁"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_gift"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5.0dip"
            android:src="@drawable/gift_1" />

    </RelativeLayout>


    <cn.qssq666.giftmodule.ui.StrokeTextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/relayout_live_anchor"
        android:layout_alignRight="@+id/relayout_live_anchor"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="x1"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:borderColor="@android:color/holo_red_dark" />
    <!--  android:scaleX="2.6"
      android:scaleY="2.6"-->


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:minHeight="50dp"

        >


    </FrameLayout>
</RelativeLayout>